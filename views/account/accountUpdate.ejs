<%- include("../includes/header.ejs", {title: "Update " + account.email}); %>

<h1>Update <%= account.first_name%></h1>
<form action="/account/update" method="get">
    <input type="hidden" id="account_id" name="account_id" value="<%= account.account_id %>">
    First Name: <input id="first_name" name="first_name" type="text" />
    <br />

    Last Name: <input id="last_name" name="last_name" type="text" />
    <br />

    Email: <input id="email" name="email" type = "text" />
    <br />
    <br />

    resumes <br />
    <select id="resume_id" name="resume_id" multiple="multiple">
        <% for(var i=0; resume.length > i; i++ ) {
            var selected = "";

            if(resume[i].user_account_id != null) {
                selected = "selected";
            }
        %>
        <option value="<%= resume[i].resume_id %>" <%= selected %> ><%= resume[i].resume_name %></option>
        <% } %>
    </select>
    <!-- Initialize the multiselect plugin: -->
    <script type="text/javascript">
        $(document).ready(function() {
            $('#resume_id').multiselect();
        });
    </script>
    <br />


    <br />

    <input type="submit" />
    <br />

</form>

<%- include("../includes/footer.ejs"); %>